debug:
  enabled: true
  log_reads: true
  summary_every_s: 10
mqtt:
  host: 127.0.0.1
  port: 1883
  client_id: uspd-modbus-gw
  base_topic: /devices
  qos: 0
  retain: false
db:
  url: sqlite:///./data/data.db
polling:
  interval_ms: 1000
  jitter_ms: 120
  no_response_increment: 1
  max_errors_before_backoff: 5
  backoff_ms: 500
  batch_read:
    enabled: true
    max_bits: 64
    max_registers: 60
lines:
- name: line1
  device: COM4
  baudrate: 115200
  timeout: 0.08
  parity: N
  stopbits: 1
  port_retry_backoff_s: 5
  rs485_rts_toggle: false
  nodes:
  - unit_id: 44
    object: object1_io
    params:
    - name: q1
      register_type: coil
      address: 1001
      scale: 1.0
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 5000
      topic: site1/room2/io/q1
    - name: q3
      register_type: coil
      address: 1002
      scale: 1.0
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 5000
      topic: site1/room2/io/q3
    - name: q4
      register_type: coil
      address: 1003
      scale: 1
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 5000
      topic: null
