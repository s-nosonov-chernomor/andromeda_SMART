debug:
  enabled: true
  log_reads: false
  summary_every_s: 20
mqtt:
  host: 127.0.0.1
  port: 1883
  base_topic: /devices
  qos: 0
  retain: false
  client_id: uspd-modbus-gw
db:
  url: sqlite:///./data/data.db
history:
  max_rows: 50000
  ttl_days: 15
  cleanup_every: 500
backups:
  dir: ./data/backups
  keep: 10
serial:
  echo: false
addressing:
  normalize: false
service:
  unit: agent.service
  restart_cmd: ''
andromeda:
  restart_cmd: /usr/local/bin/restart-andromeda.sh
current:
  touch_read_every_s: 3
polling:
  interval_ms: 1000
  jitter_ms: 120
  backoff_ms: 500
  max_errors_before_backoff: 5
  port_retry_backoff_s: 5
  batch_read:
    enabled: true
    max_bits: 64
    max_registers: 60
lines:
- name: line1
  device: COM4
  baudrate: 115200
  timeout: 0.1
  parity: N
  stopbits: 1
  port_retry_backoff_s: 1
  rs485_rts_toggle: false
  nodes:
  - unit_id: 44
    params:
    - name: q1
      register_type: coil
      address: 1001
      words: 1
      data_type: u16
      word_order: AB
      scale: 1.0
      mode: r
      publish_mode: on_change
      publish_interval_ms: 5000
      topic: site1/room2/io/q1
      error_state: 0
      display_error_text: Что-то не так работает как надо
      mqttROM: Chnl1
    - name: q81
      register_type: coil
      address: 1002
      words: 1
      data_type: u16
      word_order: AB
      scale: 1.0
      mode: r
      publish_mode: on_change
      publish_interval_ms: 5000
      topic: site1/room2/io/q3
      error_state: 1
      display_error_text: Снова где то кто то что-то не так сделал походу
      mqttROM: Chnl4
    object: object1_io2
    num_object: 1
  - unit_id: 29
    params: []
    object: rele2
    num_object: 2
  - unit_id: 224
    params:
    - name: время работы
      register_type: holding
      address: 110
      words: 1
      data_type: u16
      word_order: AB
      scale: 1.0
      mode: rw
      publish_mode: on_change
      publish_interval_ms: 5000
      topic: null
      error_state: 1
    - name: Ток_7
      register_type: input
      address: 4373
      words: 1
      data_type: s16
      word_order: AB
      scale: 1
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 3600000
      topic: null
      step: 10
      hysteresis: 1
    object: счетчик
  - unit_id: 101
    params:
    - name: время работы
      register_type: holding
      address: 110
      words: 1
      data_type: u16
      word_order: BA
      scale: 1.0
      mode: rw
      publish_mode: on_change
      publish_interval_ms: 50000
      topic: null
      error_state: 1
    object: счетчик
  - unit_id: 79
    params:
    - name: МощностьК1
      register_type: input
      address: 64
      words: 1
      data_type: u16
      word_order: AB
      scale: 1
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 3600000
      topic: null
      mqttROM: мощи
      step: 100
      hysteresis: 20
    object: Реле_1
    num_object: 5
  - unit_id: 43
    object: мио 5
    params:
    - name: д431
      register_type: coil
      address: 1000
      words: 1
      data_type: u16
      word_order: AB
      scale: 1
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 50000
      topic: null
      step: null
      hysteresis: null
    num_object: 4
  - unit_id: 98
    object: мио 6
    params:
    - name: д981
      register_type: coil
      address: 1000
      words: 1
      data_type: u16
      word_order: AB
      scale: 1
      mode: r
      publish_mode: on_change_and_interval
      publish_interval_ms: 0
      topic: null
      step: null
      hysteresis: null
    num_object: 6
